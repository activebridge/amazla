{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "vcs": 
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
  "files": 
    "ignoreUnknown": false,
    "includes": ["**", "!**/dist/**", "!**/node_modules/**"],
  "formatter": 
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
  "assist": "actions": "source": "organizeImports": "on" ,
  "linter": 
    "enabled": true,
    "rules": 
      "recommended": true,
      "suspicious": 
        "noConsole": "off",
      "correctness": 
        "noUnusedVariables": "warn",
  "javascript": 
    "formatter": 
      "quoteStyle": "single",
      "semicolons": "asNeeded",
    "globals": [
      "hmUI",
      "hmFS",
      "hmSetting",
      "hmApp",
      "hmBle",
      "DeviceRuntimeCore",
      "px",
      "console",
      "process",
      "global",
      "__dirname",
      "__filename",
      "Buffer",
      "module",
      "require",
      "exports"
    ]
}
